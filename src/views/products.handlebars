<section class="container mt-3" style="margin: 0 auto;">
  <div class="row">
    <div class="col-lg-6" style="margin: 0 auto;">
      <h2 class="titulo-categoria">Categorias</h2>
      <form id="form-category">
        <div class="mb-3">
          <label
            for="category"
            class="form-label"
          >Seleccione una categoría</label>
          <select
            id="category"
            name="category"
            class="form-select"
            required
            style="height: 45px; border: 2px solid black;margin-bottom:20px; border-radius: 10px;"
          >
            <option selected disabled>Seleccione una opción</option>
            {{#each category}}
              <option value="{{name}}">{{name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Ordenar
            por precio</label>
          <select
            id="price"
            name="sort"
            class="form-select"
            required
            style="height: 45px; border: 2px solid black;margin-bottom:20px; border-radius: 10px;"
          >
            <option selected disabled>Seleccione una opción</option>
            <option value="1">Menor Precio</option>
            <option value="-1">Mayor Precio</option>
            <option value="0">No ordenar</option>
          </select>
        </div>
        <div class="d-flex flex-column">
          <button class="btn btn-primary" type="submit">FILTRAR</button>
          <a class="" href="/" style="width: 100%;">
            <button
              class="btn btn-primary"
              style="width: 100%;margin-top:20px"
            >Volver</button>
          </a>
        </div>
      </form>
    </div>
    <h2 style="text-align: center;margin-top:20px;color:white">TODOS LOS PRODUCTOS</h2>
  </div>
</section>

<div class="container">
  <div class="row">
    {{#each products}}
      <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
        <div class="card" style="width: 100%;">
          <img class="card-img-top" src="{{thumbail}}" alt="Card image cap" />
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-stock">Stock: {{stock}}</p>
            <p class="card-price">${{price}}</p>
            <p class="_id">Code: {{code}}</p>
            <a
              class="btn"
              style="text-decoration: none;margin-top:2rem;color:white;"
              href="/api/cart/pid/{{_id}}"
            >Add to cart</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

