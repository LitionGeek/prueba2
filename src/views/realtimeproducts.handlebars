<nav aria-label="Page navigation" style="width:20%;margin: 0 auto;">
  <ul class="pagination justify-content-center" style="gap: 5px;">
    {{#if productsPrev}}
      <li class="page-item">
        <a
          class="page-link"
          href="{{productsPrev}}"
          aria-label="Anterior"
          style="height: 40px;width:40px;display:flex;align-items:center;justify-content:center;background-color:#0097a7;
          font-weight:bold;font-size:1.5rem;"
        >
          <span aria-hidden="true" style="color: white;">&laquo;</span>
        </a>
      </li>
    {{/if}}
    {{#if productsPrevValidate}}
      <li class="page-item">
        <a
          class="page-link"
          href="{{productsPrev}}"
          aria-label="Anterior"
          style="height: 40px;width:40px;display:flex;align-items:center;justify-content:center;background-color:#0097a7;
          font-weight:bold;font-size:1.5rem;color:white;"
        >
          {{productsPrevValidate}}
        </a>
      </li>
    {{/if}}
    {{#if productsNextValidate}}
      <li class="page-item">
        <a
          class="page-link"
          href="{{productsNext}}"
          aria-label="Anterior"
          style="height: 40px;width:40px;display:flex;align-items:center;justify-content:center;background-color:#0097a7;
          font-weight:bold;font-size:1.5rem;color:white"
        >
          {{productsNextValidate}}
        </a>
      </li>
    {{/if}}
    <!-- Puedes agregar más elementos de paginación si es necesario -->
    {{#if productsNext}}
      <li class="page-item">
        <a
          class="page-link"
          href="{{productsNext}}"
          aria-label="Siguiente"
          style="height: 40px;width:40px;display:flex;align-items:center;justify-content:center;background-color:#0097a7;
          font-weight:bold;font-size:1.5rem;color:white"
        >
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    {{/if}}
  </ul>
</nav>

<div class="container">
  <div class="row">
    <!-- Formulario de Crear Productos -->
    <div class="col-lg-6">
      <div class="formulario-real mx-auto">
        <h3 style="text-transform: uppercase">Crear Productos</h3>
        <form
          id="formCreate"
          class="formulario-grid"
          style="margin-bottom: 20px;"
        >
          <div class="form-group">
            <label for="title">Title:</label>
            <input
              type="text"
              class="form-control"
              id="title"
              placeholder="Ingrese el título aquí"
              name="title"
              required
              style="max-width: 100%;"
            />
          </div>
          <div class="form-group">
            <label for="descripcion">Descripción:</label>
            <input
              type="text"
              class="form-control"
              id="descripcion"
              placeholder="Ingrese la descripción"
              name="descripcion"
              required
            />
          </div>
          <div class="form-group">
            <label for="code">Code:</label>
            <input
              type="text"
              class="form-control"
              id="code"
              placeholder="Ingrese el código aquí"
              name="code"
              required
            />
          </div>
          <div class="form-group">
            <label for="price">Price:</label>
            <input
              type="number"
              class="form-control"
              id="price"
              placeholder="Ingrese el precio"
              min="1"
              name="price"
              required
            />
          </div>
          <div class="form-group">
            <label for="status">Status:</label>
            <select class="form-control" id="status" name="status" required>
              <option value="" disabled selected>Select one</option>
              <option value="0">True</option>
              <option value="1">False</option>
            </select>
          </div>
          <div class="form-group">
            <label for="stock">Stock:</label>
            <input
              type="number"
              class="form-control"
              id="stock"
              placeholder="Ingrese el stock aquí"
              min="0"
              name="stock"
              required
            />
          </div>
          <div class="form-group">
            <label for="category-select">Category:</label>
            <select class="form-control" name="category" required>
              <option value="" disabled selected>Select one</option>
              {{#each category}}
                <option value="{{this.name}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
          <div class="form-group">
            <label for="thumbail">Thumbnail:</label>
            <input
              type="text"
              class="form-control"
              id="thumbail"
              placeholder="Ingrese el thumbnail aquí"
              name="thumbail"
              required
            />
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input
              type="email"
              class="form-control"
              id="email"
              placeholder="Ingrese el email owner aquí"
              name="email"
              required
            />
          </div>
          <button
            class="btn btn-primary"
            type="submit"
            id="create"
            style="margin-top: 20px;"
          >Crear Producto</button>
        </form>
        <p style="text-align: center;margin-top: 10px">Recuerde rellenar todos
          los campos.</p>
      </div>
    </div>

    <!-- Formulario de Eliminar Productos -->
    <div class="col-lg-6 col-12">
      <div class="formulario-delete mx-auto mt-3 mt-lg-0">
        <h3>Eliminar Productos</h3>
        <form class="form-delete" id="formDelete">
          <div class="form-group" style="margin-bottom:20px">
            <label for="id">ID:</label>
            <input
              type="text"
              class="form-control"
              id="id"
              name="id"
              required
            />
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input
              type="email"
              class="form-control"
              id="email"
              placeholder="Ingrese el email owner aquí"
              name="email"
              required
              style="margin-bottom: 40px;"
            />
          </div>
          <button class="btn btn-danger" type="submit" id="create">Eliminar
            Producto</button>
        </form>
      </div>
    </div>
  </div>
</div>

