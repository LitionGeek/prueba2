<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex flex-column" style="overflow-x: auto;">
        {{#each cart.products}}
          <div class="carrito-producto" style="gap:50px;">
            <img
              class="card-img-top"
              src="{{pid.thumbail}}"
              alt="Card image cap"
              style="width:100%;"
            />
            <div>
              <h5 class="card-title-card">{{pid.title}}</h5>
              <p class="card-descripcion-cart">Descripción:
                {{pid.descripcion}}</p>
              <p class="card-descripcion-cart">ID: {{pid._id}}</p>
              <p class="card-descripcion-cart">Code: {{pid.code}}</p>
            </div>
            <div>
              <p
                style="font-size: 40px; color: white; margin-bottom: 20px;"
              >Total: ${{total}}</p>
              <p class="card-price-cart" style="font-size: 30px">C/u: ${{pid.price}}</p>
            </div>
            <div class="cart-gestion">
              <a
                style="text-decoration: none; font-size: 50px; color: white;"
                href="/api/cart/delete/{{pid._id}}"
              >-</a>
              <h5 class="quantity">Quantity: {{quantity}}</h5>
              <a
                style="text-decoration: none; font-size: 50px; color: white;"
                href="/api/cart/pid/{{pid._id}}"
              >+</a>
              <a
                class="keep"
                href="/api/products/products"
                style="none; font-size: 20px; color: white; text-decoration: none;"
              >keep buying</a>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<h2
  style="text-align: center;font-size:30px;margin-bottom:20px;text-transform:uppercase;"
>Total a pagar: ${{total}}</h2>

<div style="text-align: center">
  <a class="btn" href="/api/cart/{{cart._id}}/purchase">Finalizar compra</a>
</div>

