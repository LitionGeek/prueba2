<h2
  class="chat"
  style="font-size: 30px; text-align:center; margin-bottom:2rem;margin-top:2rem;"
>Bienvido al Chat
  <b id="username"></b>!</h2>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card chat-caja" style="box-shadow: 0px 0px 10px #969696;">
        <div>
          <p class="text-center m-0 historial" style="color: white;"><b>Historial</b></p>
        </div>
        <hr style="margin: 2px 0 2px 0;" />
        <div
          class="mensajeria"
          id="logs msj"
          style="margin: 5px; max-width: 400px; max-height: 200px; overflow-y: scroll;"
        >
          {{#each messages}}
            <p style="color: white;"><b>{{user}}:</b>
              {{message}}<i
                style="font-size: x-small; margin-left: 5px;"
              >{{hour}}</i></p>
          {{/each}}
        </div>
      </div>
      <div class="escribir mt-3">
        <b>Escribe algo:</b>
        <input id="chatbox" class="form-control" />
      </div>
    </div>
  </div>
</div>
