<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header">
          <h3>Perfil de Usuario</h3>
        </div>
        <div class="card-body">
          <div class="container">
            <div class="d-flex flex-wrap" style="gap:20px">
              <div class="col-md-6">
                <label>First name:</label>
                <h3 style="color: white;">{{first_name}}</h3>
                <label>Last name:</label>
                <h3 style="color: white;">{{last_name}}</h3>
                <label>Age:</label>
                <h3 style="color: white;">{{age}}</h3>
              </div>
              <div class="col-md-6">
                <label>Email:</label>
                <h3 style="color: white;">{{email}}</h3>
                <label>Rol:</label>
                <h3 style="color: white;">{{rol}}</h3>
              </div>
            </div>
            <div class="d-flex justify-content-around">
              <a href="/api/session/logout" style="color: white;">Logout</a>
              <a href="/api/users/premium/{{_id}}" style="color:white;">Change to rol</a>
              <a href="/api/products/products" style="color:white;">Products</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

