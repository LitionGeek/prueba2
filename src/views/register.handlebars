<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header" style="color: white;">
          Register
        </div>
        <div class="card-body">
          <form
            class="d-flex flex-column"
            action="/api/session/register"
            method="post"
            style="width: 100%;"
          >
            <label>First name:</label>
            <input
              type="text"
              placeholder="Ingrese su nombre"
              name="first_name"
              required
              style="width: 100%;"
            />
            <label>Last name:</label>
            <input
              type="text"
              placeholder="Ingrese su apellido"
              name="last_name"
              required
              style="width: 100%;"
            />
            <label>Age:</label>
            <input
              type="text"
              placeholder="Ingrese su edad"
              name="age"
              min="18"
              max="99"
              required
              style="width: 100%;"
            />
            <label>Email:</label>
            <input
              type="email"
              name="email"
              placeholder="Ingrese su email"
              required
            />
            <label>Password:</label>
            <div class="div-password-login">
              <input
                type="password"
                name="password"
                placeholder="password"
                required
              />
            </div>
            <button
              type="submit"
              class="btn"
              style="background-color: aliceblue;width:100%;height:45px"
            >Registrarme</button>
            <div style="margin-top: 20px;text-align:center;">
              <a
                href="api/session/login"
                style="margin-top:10px;text-align:center;color:white"
              >¿Ya tenes cuenta? Inicia Sesión</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

